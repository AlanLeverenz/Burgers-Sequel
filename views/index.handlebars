<div class="container">
    <div class="mt-3 col-xs-12 text-center" id="header">
        <img src="images/cheeseburger-34315_1280.png" width="128px">
        <br>
        <h1>BRGRS</h1>
        <br>
    </div>
</div>

<div class="container">

    {{!-- burger list ------------------------------------------}}
    <div class="row">
        <div class="col-6 text-center" id="menu">
            {{#each burger_data}}
            {{#unless this.devoured}}
                <div class="text-center to-eat">
                    {{this.id}}. {{this.name}}
                </div>
                <div class="text-center toppings"> 
                    {{this.toppings}}
                </div>
            {{/unless}}
            {{/each}}
        </div> 

    {{!-- burger devour update form ----------------------------}}
        <div class="col text-center eat-it">
            {{#each burger_data}}
            {{#unless this.devoured}}
            <form method="POST" action="/burgers/update/{{this.id}}" class="button-size">
                <input type="hidden" name="id" type="text" value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-light"><i class="fas fa-cookie-bite"></i> DEVOUR <span style="color:blue">{{this.name}}!</span> </button>

{{!-- click on a customer name to select its id. --}}
{{!-- both the burger id and the customer id form a request for a query --}}
{{!-- the response returns the result, which is inserted below the customer name in the customer list div --}}

                <select>
                    {{#each customer_data}}
                        <option customer-id="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>

            </form>
            {{/unless}}
            {{/each}}
        </div>

    {{!-- customer list ---------------------------------------}}
        <div class="col text-center" id="customer-list">
            {{#each customer_data}}
                <div class="text-center customer">
                    {{this.name}}
                </div>
                {{!-- INSERT DEVOURED BURGER LIST BELONGING TO THE CUSTOMER --}}
            {{/each}}
        </div> 

{{!-- ORM CODING --}}
        {{!-- devoured burgers --}}
        <div class="eaten">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>

    </div>
</div>

<hr>

{{!-- make a burger form --}}
<div class="container">
    <div class="row justify-content-around">
        <div class="col-xs-6 text-center enter_section">
            <form action="/burgers/create" method="POST" class="create-form">

                <input type="textarea" name="name" placeholder="burger" class="form-control" value="" id="enter_burger" style="height:50px">

                <input type="textarea" name="toppings" placeholder="toppings" class="form-control" value="" id="enter_topping" style="height:80px">

                <button type="submit" class="btn btn-primary spacer" id="burger-enter-button">SUBMIT</button>
            </form>
            <p>Enter a burger and its toppings you would like to eat.</p>
        </div>
        
{{!-- add a customer form --}}
        <div class="col-xs-6 text-center enter_section">
            <form action="/customers/create" method="POST" class="create-form">

                <input type="textarea" name="name" placeholder="customer" class="form-control" value="" id="enter_customer" style="height:50px">

                <button type="submit" class="btn btn-primary spacer" id="customer-enter-button">SUBMIT</button>
            </form>
            <p>Add a customer who wants a burger.</p>
        </div>
    </div>
</div>
