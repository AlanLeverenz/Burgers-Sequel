<div class="container">
    <div class="mt-3 col-xs-12 text-center" id="header">
        <img src="images/cheeseburger-34315_1280.png" width="128px">
        <br>
        <h1>BRGRS</h1>
        <br>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-6 text-center" id="menu">
            {{#each burger_data}}
            {{#unless this.devoured}}
                <div class="text-center to-eat">
                    {{this.id}}. {{this.burger_name}}
                </div>
                <div class="text-center toppings"> 
                    {{this.burger_toppings}}
                </div>
            {{/unless}}
            {{/each}}
        </div> 

        <div class="col text-center eat-it">
            {{#each burger_data}}
            {{#unless this.devoured}}
            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-light"><i class="fas fa-cookie-bite"></i> DEVOUR {{this.burger_name}}! </button>
            </form>
            {{!-- </div> --}}
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-4 text-center" class="eaten">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-6 text-center enter_section">
            <form action="/burgers/create" method="POST" class="create-form">
            {{!-- <form class="create-form"> --}}

                {{!-- <input type="textarea" name="burger_name" placeholder="burger" class="form-control" id="enter_name"> --}}

                <input type="textarea" name="burger_name" placeholder="burger" class="form-control" value="" id="enter_name" style="height:50px">

                {{!-- <input type="textarea" name="burger_toppings" placeholder="toppings" class="form-control" id="enter_topping"> --}}

                <input type="textarea" name="burger_toppings" placeholder="toppings" class="form-control" value="" id="enter_topping" style="height:80px">

                <button type="submit" class="btn btn-primary spacer" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter a burger and its toppings you would like to eat.</p>
        </div>
    </div>
</div>
